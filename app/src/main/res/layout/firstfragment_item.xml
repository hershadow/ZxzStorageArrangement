<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mini_marginBottom">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/firstItem_imageViewBG"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/firstItem_guideline1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/firstItem_TextView_L1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mini_marginEnd"
            android:text="TextView"
            android:textSize="@dimen/textSizeSmall"
            app:layout_constraintStart_toEndOf="@id/firstItem_guideline1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/firstItem_imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/mini_marginEnd"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/firstItem_imageViewBG"
            app:layout_constraintEnd_toStartOf="@+id/firstItem_guideline1"
            app:layout_constraintStart_toStartOf="@id/firstItem_imageViewBG"
            app:layout_constraintTop_toTopOf="@id/firstItem_imageViewBG"
            app:srcCompat="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/firstItem_TextView_L2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mini_marginBottom"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@id/firstItem_guideline1"
            app:layout_constraintTop_toBottomOf="@+id/firstItem_TextView_L1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/firstItem_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <TextView
            android:id="@+id/firstItem_TextView_L3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mini_marginEnd"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/firstItem_guideline1"
            app:layout_constraintTop_toBottomOf="@+id/firstItem_TextView_L2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/firstItem_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <TextView
            android:id="@+id/firstItem_TextView_R1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mini_marginBottom"
            android:text="TextView"
            android:textSize="@dimen/textSizeSmall"
            app:layout_constraintStart_toStartOf="@+id/firstItem_guideline2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/firstItem_TextView_R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mini_marginBottom"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/firstItem_guideline2"
            app:layout_constraintTop_toBottomOf="@+id/firstItem_TextView_R1" />

        <TextView
            android:id="@+id/firstItem_TextView_L4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mini_marginBottom"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/firstItem_guideline1"
            app:layout_constraintTop_toBottomOf="@+id/firstItem_TextView_L3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>